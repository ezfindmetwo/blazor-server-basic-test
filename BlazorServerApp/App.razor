<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="foundRouteData">
        <RouteView RouteData="foundRouteData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="foundRouteData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p>Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

