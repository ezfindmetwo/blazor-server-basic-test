@page "/fetchdata"

<h1>Sample Data</h1>

<table class="table">
    <thead>
        <tr><th>ID</th><th>Name</th></tr>
    </thead>
    <tbody>
        @foreach (var item in data)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<Item> data = new List<Item>
    {
        new Item{Id=1, Name="Alice"},
        new Item{Id=2, Name="Bob"}
    };

    public class Item
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty; // 加上預設值
    }
}
